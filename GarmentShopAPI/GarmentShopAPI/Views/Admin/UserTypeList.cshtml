@model IEnumerable<GarmentShopAPI.Models.UserTypeTable>

@{
    ViewData["Title"] = "UserTypeList";
    Layout = "~/Views/Shared/_OperaterLayout.cshtml";
    int count = 1;
}

<h1>UserTypeList</h1>

<p>
   
</p>


<div class="row">
    <div class="col-3 col-offset-8">
     
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header justify-content-right">
                <a asp-action="Create" class="btn btn-outline-primary btn-sm">Create New</a>
            </div>
            <div class="card-body">
                
               
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>User Type</th>
                                <th>Action</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                           

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserType)
                                    </td>
                                    <td>
                                        <a asp-action="AddOrUpdate" class="badge badge-info" asp-route-id="@item.UserTypeId">Edit</a> |

                                        <a asp-action="Delete" class="badge badge-danger" asp-route-id="@item.UserTypeId">Delete</a>
                                    </td>
                                </tr>
                                count=count+1;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>