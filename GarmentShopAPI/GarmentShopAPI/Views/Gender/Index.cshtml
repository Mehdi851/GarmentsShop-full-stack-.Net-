@model IEnumerable<GarmentShopAPI.Models.GenderTable>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OperaterLayout.cshtml";
    int counter = 1;
}

<h1>Gender Type</h1>


<div class="row">

    <div class="col-lg-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-outline-info btn-border-radious">Create New</a>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>User Type</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GenderTitle)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" class="badge badge-info Create-btn" asp-route-id="@item.GenderId">Edit</a>

                                        <a asp-action="Delete" class="badge badge-danger Create-btn" asp-route-id="@item.GenderId">Delete</a>
                                    </td>
                                </tr>
                                counter = counter + 1;
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

