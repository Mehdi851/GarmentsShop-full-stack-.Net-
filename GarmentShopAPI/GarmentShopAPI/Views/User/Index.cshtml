@model IEnumerable<GarmentShopAPI.Models.UserTable>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OperaterLayout.cshtml";
}

<h1>All Users</h1>

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-outline-info btn-border-radious">Create New</a>
              
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email </th>
                                <th>Full Name</th>
                                <th>Contact No</th>
                                <th>Gender</th>
                                <th>User Type</th>
                                <th>User Status</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gender.GenderTitle)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserType.UserType)
                                    </td>
                                    <td>
                                        @if (item.UserStatus.StatusTitle == "Pending")
                                        {
                                            <label class="badge badge-warning">@item.UserStatus.StatusTitle</label>
                                        }
                                        @if(item.UserStatus.StatusTitle == "Approved"){
                                        <label class="badge badge-success">@item.UserStatus.StatusTitle</label>
                                        }
                                        @if (item.UserStatus.StatusTitle == "Rejected")
                                        {
                                            <label class="badge badge-danger">@item.UserStatus.StatusTitle</label>
                                        }
                                        @if (item.UserStatus.StatusTitle == "Suspended")
                                        {
                                            <label class="badge badge-warning">@item.UserStatus.StatusTitle</label>
                                        }
                                       
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                                    </td>
                                </tr>
                            }
                           
                                @*<td><label class="badge badge-danger">Pending</label></td>*@
                           
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>